{
  "expo": {
    "name": "剧词记",
    "slug": "dramaword-mobile",
    "version": "1.59.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "dramaword",
    "icon": "./assets/images/icon.png",
    "plugins": [
      "expo-localization",
      "expo-audio"
